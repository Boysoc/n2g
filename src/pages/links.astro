---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import FriendLinks from "@components/FriendLinks.astro";
import Component from '@components/Comment.astro';
import RandomVisitButton from "@components/RandomVisitButton.astro";
import { SITE } from "@config";
---

<Layout>
  <Header activeNav="links" />
  <main id="main-content" class="content">
    <section id="recent-posts">
      <h1 class="links-title">邻居</h1>
      <p><RandomVisitButton /><span class="gradient-text">一个有趣的邻居</span>。</p>
      <FriendLinks />
      <Component />
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .links-title {
    color: #cf4f28;
  }
  
  .gradient-text {
    font-size: 1.1rem;
    font-weight: 500;
    letter-spacing: 0.5px;
    background: linear-gradient(90deg, #222 0%, #cf4f28 50%, #222 100%);
    background-size: 200% 100%;
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    animation: gradientMove 8s linear infinite;
    display: inline-block;
    position: relative;
    vertical-align: middle;
  }

  @keyframes gradientMove {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style>