import { links, type Link } from "../links";
import { SITE } from "@config";

export interface Props {
  showDescription?: boolean;
  maxItems?: number;
  showRandomButton?: boolean;
}

const { showDescription = true, maxItems, showRandomButton = true } = Astro.props;

// Êú¨Á´ô‰ø°ÊÅØ
const siteInfo = {
  name: SITE.title,
  href: SITE.website,
  logo: `${SITE.website}/logo.webp`,
  description: "ÁãÆÂ≠êÂ∫ßÁöÑÊï∞Â≠óÊ∏∏ÁâßËÄÖÔºåÁî®‰ª£Á†ÅÂíåÊñáÂ≠óÊé¢Á¥¢ÁßëÊäÄ‰∏ñÁïåÔºåËÆ∞ÂΩïÁÅµÊÑü‰∏éÊÄùËÄÉ„ÄÇ"
};

// ÂàÜÁ¶ªÂ∑≤È™åËØÅÂíåÊú™È™åËØÅÁöÑÈìæÊé•
const sortedLinks = [...links];
sortedLinks.sort((a, b) => {
  // Â∑≤È™åËØÅÁöÑÈìæÊé•ÊéíÂú®ÂâçÈù¢
  if (a.verified && !b.verified) return -1;
  if (!a.verified && b.verified) return 1;
  return 0;
});

const displayLinks = maxItems ? sortedLinks.slice(0, maxItems) : sortedLinks;
const verifiedLinks = displayLinks.filter(link => link.verified);
const unverifiedLinks = displayLinks.filter(link => !link.verified);
