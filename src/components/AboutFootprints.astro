  addMarkers(placeList, color) {
    if (!placeList || !Array.isArray(placeList)) return;
    
    let addedCount = 0;
    placeList.forEach(place => {
      if (place.lng && place.lat && typeof place.lng === 'number' && typeof place.lat === 'number') {
        try {
          const marker = new this.AMap.Marker({
