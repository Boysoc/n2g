---
import { links } from "../links";

const verifiedLinks = links.filter(link => link.verified);
---

{verifiedLinks.length > 0 && (
  <div class="random-visit-container">
    <button 
      class="random-visit-btn"
      type="button"
      id="random-visit-button"
    >
      随机访问
    </button>
  </div>
)}

<style>
  /* 随机访问按钮样式 */
  .random-visit-container {
    display: inline-block;
    margin-left: 0.5em;
  }
  
  .random-visit-btn {
    background-color: #cf4f28;
    border: 1px solid #cf4f28;
    border-radius: 4px;
    padding: 0.5em 1em;
    font-size: 0.9rem;
    font-weight: 500;
    font-family: inherit;
    color: #ffffff;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: visible;
    line-height: 1.5;
  }
  
  .random-visit-btn::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    border-radius: 5px;
    background: transparent;
    border: 1px solid rgba(207, 79, 40, 0.3);
    box-shadow: 0 0 3px rgba(207, 79, 40, 0.2),
                0 0 5px rgba(207, 79, 40, 0.1);
    z-index: -1;
    animation: redGlow 3s infinite alternate;
  }
  
  .random-visit-btn:hover {
    background-color: #b84220;
    border-color: #b84220;
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(207, 79, 40, 0.3);
  }
  
  .random-visit-btn:hover::before {
    border-color: rgba(207, 79, 40, 0.5);
    box-shadow: 0 0 5px rgba(207, 79, 40, 0.3),
                0 0 8px rgba(207, 79, 40, 0.2);
  }
  
  .random-visit-btn:active {
    transform: translateY(0);
  }
  
  @keyframes redGlow {
    0% {
      box-shadow: 0 0 2px rgba(207, 79, 40, 0.2),
                  0 0 4px rgba(207, 79, 40, 0.1);
    }
    100% {
      box-shadow: 0 0 4px rgba(207, 79, 40, 0.3),
                  0 0 8px rgba(207, 79, 40, 0.2);
    }
  }
  
  /* 跑马灯动画效果 */
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
  }
  
  /* 高亮效果 */
  :global(.modern-card.highlight) {
    transform: scale(1.05);
    box-shadow: 0 0 15px rgba(255, 165, 0, 0.5);
    z-index: 10;
    position: relative;
  }
  
  :global(.modern-card.selected) {
    transform: scale(1.1);
    box-shadow: 0 0 20px rgba(255, 165, 0, 0.8), 0 0 30px rgba(255, 165, 0, 0.4);
    z-index: 11;
    position: relative;
    animation: selected-pulse 1s infinite alternate;
  }
  
  @keyframes selected-pulse {
    0% { 
      box-shadow: 0 0 20px rgba(255, 165, 0, 0.8), 0 0 30px rgba(255, 165, 0, 0.4);
    }
    100% { 
      box-shadow: 0 0 25px rgba(255, 165, 0, 1), 0 0 35px rgba(255, 165, 0, 0.6);
    }
  }
</style>

<script>
  // 简化的事件处理函数
  function initRandomButton() {
    const randomButton = document.getElementById('random-visit-button');
    
    if (randomButton && !randomButton.hasAttribute('data-initialized')) {
      randomButton.setAttribute('data-initialized', 'true');
      
      randomButton.addEventListener('click', function(e) {
        const items = document.querySelectorAll('.modern-card');
        // 获取可用的链接地址
        const validLinks = Array.from(items).filter(item => !item.classList.contains('inactive'));
        if (validLinks.length === 0) return;
        if (items.length === 0) return;
        
        // 禁用按钮，防止重复点击
        this.disabled = true;
        this.textContent = '选择中...';
        
        // 随机选择一个索引
        const randomIndex = Math.floor(Math.random() * validLinks.length);
        
        // 跑马灯效果
        let currentIndex = 0;
        let round = 0; // 记录跑的圈数
        const totalRounds = 2; // 减少圈数，加快速度
        let speed = 30; // 初始速度，更快的开始
        
        // 创建动态效果
        const runMarathon = () => {
          // 移除所有高亮
          validLinks.forEach(item => {
            item.classList.remove('highlight', 'selected');
          });
          
          // 添加当前高亮
          validLinks[currentIndex].classList.add('highlight');
          
          // 增加索引
          currentIndex = (currentIndex + 1) % validLinks.length;
          
          // 如果完成一圈
          if (currentIndex === 0) {
            round++;
            speed += 40; // 每一圈速度减慢
          }
          
          // 如果跑完预设的圈数，进入最终选择阶段
          if (round >= totalRounds) {
            // 停在随机选择的项目上
            validLinks[randomIndex].classList.remove('highlight');
            validLinks[randomIndex].classList.add('selected');
            
            // 直接打开链接
            const linkElement = validLinks[randomIndex];
            const href = linkElement.href;
            
            if (href) {
              // 使用window.location在新标签页打开，这是最可靠的方式
              window.open(href, '_blank', 'noopener,noreferrer');
            }
            
            // 恢复按钮状态
            setTimeout(() => {
              this.disabled = false;
              this.textContent = '随机访问';
              validLinks.forEach(item => {
                item.classList.remove('highlight', 'selected');
              });
            }, 2000);
            
            return; // 停止循环
          }
          
          // 继续下一帧
          setTimeout(runMarathon, speed);
        };
        
        // 开始跑马灯
        runMarathon();
      });
    }
  }
  
  // 初始化
  initRandomButton();
  
  // Astro页面切换后重新绑定事件
  document.addEventListener('astro:after-swap', () => {
    // 等待DOM更新完成
    setTimeout(initRandomButton, 100);
  });
</script>